
@{
    ViewBag.Title = "Mesagerie";
}

<h2>Mesagerie</h2>

@foreach (var groupmember in ViewBag.Conversations)
{

<div class="list-group-item">
    <h4>@groupmember.User.Email</h4>
    <form method="post" action="/Groups/ShowPrivateConv">
        <input type="hidden" name="UserId" value="@groupmember.UserId" />
        <button type="submit" class="btn btn-default">Trimite-i mesaj</button>
    </form>
</div>
}
