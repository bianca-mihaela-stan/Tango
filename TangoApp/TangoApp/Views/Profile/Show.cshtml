@model TangoApp.Models.Profile
@{
    ViewBag.Title = "Show";
}

<h2>Your profile</h2>
<br />

@if (ViewBag.Message != null)
{
    <h3 class="alert alert-info" role="alert">@ViewBag.Message</h3>
}
<a href="/Profile/Edit/@Model.ProfileId" class="btn btn-success">Editeaza profilul</a>
<br /><br />
<p>
    Vizibilitatea profilului: @Model.ProfileVisibility
</p>

<p>
    Descriere: @if (@Model.Description != null)
    {
        @Model.Description
    }
</p>

<p>
    Gender: @if (@Model.Gender != null)
    {
        @Model.Gender
    }
</p>

<p>
    Tara: @if (@Model.Country != null)
    {
        @Model.Country.CountryName
    }
</p>

<p>
    Orasul: @if (@Model.City != null)
    {
        @Model.City.CityName
    }
</p>
