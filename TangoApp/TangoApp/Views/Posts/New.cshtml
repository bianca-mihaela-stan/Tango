@model TangoApp.Models.Post
@{
    ViewBag.Title = "New";
}

<h2>Adaugare postare</h2>
<h3>@ViewBag.Error</h3>
@using (Html.BeginForm(actionName: "New", controllerName: "Posts", method: FormMethod.Post))
{
    @Html.Label("Text","Continutul textului")
    <br/>
    @Html.TextArea("Text",null,new { @class ="form-control"})
    @Html.ValidationMessage("Text",null,new { @class="text-danger"})
    <br/>
    <br/>
    <button type="submit" class="btn btn-success">Adauga postarea</button>
    
}
